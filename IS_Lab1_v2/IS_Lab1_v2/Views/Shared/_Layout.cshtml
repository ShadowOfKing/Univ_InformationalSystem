                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="Sata">Интерфейс SATA</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="Sata"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="Size">Ёмкость</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="Size"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="Type">Тип</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="Type"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="Usb">Интерфейс USB</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="Usb"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="WorkTime">Время наработки на отказ</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="WorkTime"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="col-form-label" name="WriteSpeed">Скорость записи</label>
                        </div>
                        <div class="col-md-8">
                            <div class="form-control disabled" name="WriteSpeed"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script>
        var root = "@Url.Content("~/")";
        root = root[root.length - 1] == "/" ? root : root + "/";
        var generateItem = function (item) {
            var $p = $('.product-item__template').clone();
            $p.removeClass('product-item__template');
            $p.find('.product-item__image').css('background-image', 'url(' + root + "images/" + item.Image + ".png");
            $p.find('.product-item__header-name').text(item.Name);
            $p.find('.product-item__header-cost').text(item.Cost + " Руб");
            $p.find('.product-item__body-item_manufacturer').text(item.Manufacturer);
            $p.find('.product-item__body-item_type').text(item.Type);
            $p.find('.product-item__body-item_size').text(item.Size + " Гб");
            $p.find('.product-item__body-item_sata').text(item.Sata);
            $('.product-item__container').append($p);

            $p.click(function () {
                var $m = $('#exampleModal').clone();
                $m.find('div[name]').each(function () {
                    $(this).text(item[$(this).attr('name')]);
                })
                $m.find('[data-dismiss]').click(function () {
                    setTimeout(function () {
                        $m.remove();
                    }, 100);
                })
                $m.modal('show');
            })
        }

        var generateItems = function (items, empty) {
            if (empty !== false) {
                $('.product-item__container').empty();
            }
            for (var i = 0; i < items.length; i++) {
                generateItem(items[i]);
            }
        }

        $('.sidebar-toggle').click(function () {
            $('#body').toggleClass('sidebar-opened');
            $('.sidebar-toggle__text').text($('#body').hasClass('sidebar-opened') ? "CLOSE" : "OPEN");
        })
    </script>
    @RenderSection("scripts")
</body>
</html>
